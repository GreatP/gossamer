<div class="two fields">
  <div class="required twelve wide field">
    <label>Destination IP</label>
    {{input type="text" name="dest-ip" placeholder="e.g. 255.255.255.0"}}
  </div>
  <div class="required four wide field">
    <label>Prefix</label>
    {{input type="text" name="dest-prefix" placeholder="[0-32]"}}
  </div>
</div>

<div class="required twelve wide field">
  <label>Destination Port</label>
  {{input type="text" name="dest-port" placeholder="e.g 80"}}
</div>