<div class="required twelve wide field">
  <label>ICMP Type</label>
    {{#ui-dropdown class="search selection" selected=icmptype onChange=(action (mut icmptype)) as |execute mapper|}}
      <div class="default text">Select Type</div>
      <i class="dropdown icon"></i>
      <div class="menu">
        {{#each model.icmptypes as |icmptype|}}
          <div class="item" data-value="{{icmptype.id}}">
            {{icmptype.value}}
          </div>
        {{/each}}
      </div>
    {{/ui-dropdown}}
</div>
<div class="required twelve wide field">
  <label>ICMP Code</label>
  {{#ui-dropdown class="search selection" selected=icmpcode onChange=(action (mut icmpcode)) as |execute mapper|}}
    <div class="default text">Select Code</div>
    <i class="dropdown icon"></i>
    <div class="menu">
      {{!-- <div class="item" data-value="a">Code a</div>
      <div class="item" data-value="b">Code b</div>
      <div class="item" data-value="c">Code c</div> --}}
      {{#each model.icmpcodes as |icmpcode|}}
          <div class="item" data-value="{{icmpcode.id}}">
            {{icmpcode.value}}
          </div>
        {{/each}}
    </div>
  {{/ui-dropdown}}
</div>