<li>
  <div  class="thumb rule-{{rule.id}}" {{action showRule rule.id rule.name}}>
    <div class="point"></div>
    <div class="protocol">
      <span class="u{{rule.ipprotocol}}">{{rule.ipprotocol}}</span>
    </div>
    <div class="ip-add">
      <div class="srcip"><label>src. ip</label>
        <span>
        {{#if (eq rule.srcprefix null)}}
          &hellip;:&hellip;:&hellip;:&hellip;
        {{else}}
          {{rule.srcprefix}}
        {{/if}}
        </span>
      </div>
      <div class="destip"><label>dst. ip</label> <span>{{rule.destprefix}}</span></div>
      <div class="atck-arrow"></div>
    </div>
    <div class="stats">
      <div class="ports">
        <label>ports (range)</label>
        <span class="low">{{rule.destport}}</span>
      </div>
      <div class="pktsize">
        <label>bits (range)</label>
        <span class="low">
          {{#if (eq rule.pktlen 'null')}}
            &hellip;
          {{else}}
            {{rule.pktlen}}<span> b</span>
          {{/if}}
        </span>
      </div>
      <div class="action">
        <label>action</label>
        <span>{{rule.action}}</span>
      </div>
    </div>
    <div class="time">
      <span>{{moment-from-now (moment-format rule.validfrom) hidePrefix=true interval=86400}}</span>
      <span>{{moment-format rule.validfrom 'DD MMM, YYYY'}} at {{moment-format rule.validfrom 'hh:mm:ss a'}}</span>
    </div>
  </div>
</li>