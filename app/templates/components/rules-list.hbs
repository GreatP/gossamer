<li>
  <div  class="thumb">
    <div class="point"></div>
    <div class="protocol">
      <span class="u{{rule.protocol}}">{{rule.protocol}}</span>
    </div>
    <div class="ipadd">
      <div class="srcip"><label>srce. ip</label>
        <span>
        {{#if (eq rule.sourceprefix null)}}
          &hellip;:&hellip;:&hellip;:&hellip;
        {{else}}
          {{rule.sourceprefix}}
        {{/if}}
        </span>
      </div>
      <div class="destip"><label>dest. ip</label> <span>{{rule.destinationprefix}}</span></div>
      <div class="atck-arrow"></div>
    </div>
    <div class="stats">
      <div class="ports">
        <label>affected port{{#if (gt rule.count 1)}}s{{/if}}</label>
        {{#if (lte rule.count 9)}}
        <span class="low">{{rule.count}}</span>
        {{else}}
        {{#if (lte rule.count 30)}}
        <span class="med">{{rule.count}}</span>
        {{else}}
        {{#if (gte rule.count 31)}}
        <span class="high">{{rule.count}}</span>
        {{/if}}
        {{/if}}
        {{/if}}
      </div>
      <div class="pktsize">
        <label>bits (max)</label>
        {{#if (lte rule.maxpktlen 20)}}
        <span class="low">{{rule.maxpktlen}}</span>
        {{else}}
        {{#if (lte rule.maxpktlen 100)}}
        <span class="med">{{rule.maxpktlen}}</span>
        {{else}}
        {{#if (gte rule.maxpktlen 101)}}
        <span class="high">{{rule.maxpktlen}}</span>
        {{/if}}
        {{/if}}
        {{/if}}
      </div>
    </div>
    <div class="time">
      <span>{{moment-to-now (moment-format rule.formatted_frmdate) hidePrefix=true interval=86400}} ago at {{moment-format rule.validfrom 'hh:mm:ss a'}}</span>
      <span>{{moment-format rule.fromdate 'ddd, MMM Do, YYYY'}}</span>
    </div>
  </div>
</li>