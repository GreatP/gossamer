<li>
  <div  class="thumb {{if showMore "detail"}}" {{action 'toggleDetail'}}>
    <div class="point"></div>
    <div class="protocol">
      <span class="u{{rule.protocol}}">{{rule.protocol}}</span>
    </div>
    <div class="ipadd">
      <div class="srcip"><label>srce. ip</label>
        <span>
        {{#if (eq rule.srcprefix null)}}
          &hellip;:&hellip;:&hellip;:&hellip;
        {{else}}
          {{rule.srcprefix}}
        {{/if}}
        </span>
      </div>
      <div class="destip"><label>dest. ip</label> <span>{{rule.destprefix}}</span></div>
      <div class="atck-arrow"></div>
    </div>
    <div class="stats">
      <div class="ports">
        <label>affected port{{#if (gt rule.portsaff 1)}}s{{/if}}</label>
        {{#if (lte rule.portsaff 9)}}
        <span class="low">{{rule.portsaff}}</span>
        {{else}}
        {{#if (lte rule.portsaff 30)}}
        <span class="med">{{rule.portsaff}}</span>
        {{else}}
        {{#if (gte rule.portsaff 31)}}
        <span class="high">{{rule.portsaff}}</span>
        {{/if}}
        {{/if}}
        {{/if}}
      </div>
      <div class="pktsize">
        <label>bits (max)</label>
        {{#if (lte rule.maxpktlength 20)}}
        <span class="low">{{rule.maxpktlength}}</span>
        {{else}}
        {{#if (lte rule.maxpktlength 100)}}
        <span class="med">{{rule.maxpktlength}}</span>
        {{else}}
        {{#if (gte rule.maxpktlength 101)}}
        <span class="high">{{rule.maxpktlength}}</span>
        {{/if}}
        {{/if}}
        {{/if}}
      </div>
    </div>
    <div class="time">
      <span>{{moment-to-now (moment-format rule.validfrom) hidePrefix=true interval=86400}} ago at {{moment-format rule.validfrom 'hh:mm:ss a'}}</span>
      <span>{{moment-format rule.fromdate 'ddd, MMM Do, YYYY'}}</span>
    </div>
  </div>
</li>