<div class="ui tiny fixed menu">
  <div class="header item">
    <div class="logo">
      <img src="assets/images/logo.png" alt="Logo">
    </div>
  </div>
  <div class="item">
    <i class="alarm outline blue icon"></i>
  </div>
  {{#link-to 'plan' class="item contra"}}
    {{#ui-popup content="Add rules" variation="mini"}}
      <i class="add icon"></i> Add Rule
    {{/ui-popup}}
  {{/link-to}}
  <div class="header item">
    <span class="title">{{pagetitle}}</span>
  </div>
  {{#ui-dropdown class="right floated item"}}
    <span class="username">{{user-icon kind=kind}}{{username}}</span>
    <i class="dropdown icon"></i>
    <div class="menu">
      <div class="divider"></div>
      {{#if (eq kind 'globaladmin')}}
        <div class="header">Super Settings</div>
        {{#link-to "users" class="item"}}
          <i class="users icon"></i>Users
        {{/link-to}}
        {{#link-to "customers" class="item"}}
          <i class="university icon"></i>Customers
        {{/link-to}}
        <div class="divider"></div>
      {{/if}}
      {{#link-to "login" class="item"}}
        <i class="sign out icon"></i>Sign Out
       {{/link-to}}
    </div>
  {{/ui-dropdown}}

</div>