<div class="ui tiny fixed menu">
  <div class="header item">
    <div class="logo">
      <img src="assets/images/logo.png" alt="Logo">
    </div>
  </div>
  <div class="item">
    <i class="alarm outline icon"></i>
  </div>
  {{#link-to 'plan' class="blue item"}}
    {{#ui-popup content="Add rules" variation="mini"}}
      <i class="checked calendar icon"></i>
    {{/ui-popup}}
  {{/link-to}}
  {{#ui-dropdown class="item"}}
    <span class="username">{{user-icon kind=kind}}{{username}}</span>
    <i class="dropdown icon"></i>
    <div class="menu">
      <div class="header">Profile &amp; Themes</div>
      <a class="item"><i class="edit icon"></i>Settings</a>
      <a class="item"><i class="empty heart icon"></i>Themes</a>
      <a class="item"><i class="alarm outline icon"></i>Notifications</a>
      <div class="divider"></div>
      {{#if (eq kind 'globaladmin')}}
        <div class="header">Super Settings</div>
        {{#link-to "users" class="item"}}
          <i class="users icon"></i>Users
        {{/link-to}}
        <a class="item"><i class="server icon"></i>Networks</a>
        <a class="item"><i class="university icon"></i>Customers</a>
        <div class="divider"></div>
      {{/if}}
      {{#link-to "login" class="item"}}
        <i class="sign out icon"></i>Sign Out
       {{/link-to}}
    </div>
  {{/ui-dropdown}}
  <div class="header item">
    <span class="title">{{pagetitle}}</span>
  </div>
</div>