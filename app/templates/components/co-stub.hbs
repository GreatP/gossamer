<div class="ui card co-{{co.cvr}}" {{action showCustomer co.id co.cvr}}>
  <div class="content">
    <div class="header">{{co.companyname}}</div>
  </div>
  <div class="content">
    <div class="details">
      <div class="ui tiny relaxed list">

        <div class="item">
          <i class="marker icon ui basic grey small"></i>
          <div class="content">{{co.companyadr1}}, {{co.companyadr2}}, {{co.companyadr3}}, {{co.companyadr4}}</div>
        </div>

        <div class="item">
          <i class="mail outline icon ui basic grey small"></i>
          <div class="content">{{co.mainmail}}</div>
        </div>

        <div class="item">
          <i class="phone outline icon ui basic grey small"></i>
          <div class="content">{{format-phone co.mainphone}}</div>
        </div>

      </div>
    </div>
  </div>
  <div class="extra content">
    <div>
      <i class="id card outline icon basic black"></i>
      <span>{{co.cvr}}</span>
    </div>
  </div>
</div>