<div {{action 'toggleDetail'}} class="card {{if showMore "detail"}}">
  <div class="protocol">
    <span class="u{{rule.ipprotocol}}">udp</span>
    <span class="t{{rule.ipprotocol}}">tcp</span>
    <span class="i{{rule.ipprotocol}}">icmp</span>
    <span class="o{{rule.ipprotocol}}">other</span>
    <span class="counter">{{rule.portsaff}}</span>
  </div>
  <div class="ruleinfo">
    <div class="time">
      <p><i class="icon calendar"></i> {{moment-format rule.validfrom 'ddd, MMM Do, YYYY'}}</p>
      <p><i class="icon clock"></i> {{moment-format rule.validfrom 'hh:mm:ss a'}}</p>
    </div>
    <div class="duration">
      <p>
        <i class="icon hourglass end"></i>
        <span> <span class="emph">active</span> for </span>
        <span>{{moment-duration rule.duration}}</span>
      </p>
    </div>
    <div class="pktlen">
      <p><i class="icon cube"></i>
        {{#if (eq rule.pktlen null)}}
          &hellip;
        {{else}}
          {{rule.pktlen}} <span> bit{{#if (gt rule.pktlen 1)}}s{{/if}} </span>
        {{/if}}
      </p>
    </div>
    <div class="name">
      <p><i class="icon sticky note outline"></i> {{rule.rname}}</p>
    </div>
    <div class="action">
      <p><i class="icon fire extinguisher"></i> {{rule.action}}</p>
    </div>
  </div>
  <div class="ipadd">
    <div class="srcip"><label>srce. ip</label>
      <span>
        {{#if (eq rule.srcprefix null)}}
         &hellip;:&hellip;:&hellip;:&hellip;
        {{else}}
          {{rule.srcprefix}}
        {{/if}}
      </span>
    </div>
    <div class="destip"><label>dest. ip</label> <span>{{rule.destprefix}}</span></div>
    <div class="atck-arrow"></div>
  </div>
</div>