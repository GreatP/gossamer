<div class="ui middle aligned centered grid">
  <div class="three wide column">
    <h3 class="ui blue header">
      <div class="ui logo label"><span>DeIC</span><span>Gossamer</span></div>
      <div class="content">
       Login to your account
      </div>
    </h3>
    <form class="ui large form" {{action "login" on="submit"}}>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            {{input type='text' id='username' placeholder='Type in your username' value=username}}
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            {{input type='password' id='password' placeholder='and password' value=password}}
          </div>
        </div>
        {{!-- <div class="ui fluid large blue submit button">Login</div> --}}
        {{input class="ui fluid large blue submit button" type="submit" value="Login" }}
      </div>

      {{#if loginFailed}}
        <div class="ui error message"></div>
        <div class="ui bottom attached warning message">
          <i class="icon help"></i>
          Login failed! Please try again.
        </div>
      {{/if}}
    </form>

    <div class="ui message">
      New to us? <a href="#">Sign Up</a>
    </div>
  </div>
</div>