<div class="ui stackable four column grid">
    <h4><span class="emph">Active</span> currently</h4>
    <div class="history-cards ui raised link cards">
      {{#if (gt rules.meta.recent 0)}}
        {{#each rules as |rule i|}}
          {{#if rule.isactive}}
            {{rules-card
              rule=rule
              showRule=(action 'showRule')
            }}
          {{/if}}
        {{/each}}
      {{else}}
        &#8942;
      {{/if}}
    </div>
</div>

