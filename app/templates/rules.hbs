<p>Active Recently</p>
<div class="history-cards">
  {{#each model as |r i|}}
    {{#if (lte i 9)}}
      {{rules-card rule=r}}
    {{/if}}
  {{/each}}
</div>
<p>Active Earlier</p>
<div class="history-thumbs">
  <ul class="timeline">
  {{#each model as |r j|}}
    {{#if (and (gt j 6) (lte j 12))}}
      {{rules-list rule=r}}
    {{/if}}
  {{/each}}
  </ul>
  <div class="sec-load center">
    <button {{action 'showOlder'}} class="ui labeled mini icon button blue">
      <i class="history icon"></i>
      further back
    </button>
  </div>
</div>