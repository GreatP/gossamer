{{#if (not-eq currentRouteName 'login')}}
  <div class="pusher">
    <div class="full height">
      <div class="toc">
        {{side-menu username='Ashokaditya' kind='globaladmin'}}
      </div>
      <div class="article">
        {{top-menu routename=currentRouteName kind='globaladmin'}}
        <div class="ui grid">
          {{outlet}}
        </div>
      </div>
    </div>
  </div>
  {{notification-container position="top-right"}}
{{else}}
  {{#if (eq currentRouteName "login")}}
    {{render "login"}}
  {{/if}}
{{/if}}

