<div class="sixteen wide column">
  <div class="ui link fluid stackable cards user">
    {{#each users as |u|}}
      {{user-card
        u=u
        showUser=(action 'showUser')
      }}
    {{/each}}
  </div>
</div>
<div class="eight wide column">
  {{user-edit
    userid=userid
    kind=kind
    customerid=customerid
    companyname=companyname
    netnames=netnames
    netids=netids
    name=name
    firstname=firstname
    username=username
    customers=customers
    networks=networks
    act=act
    buttonico=buttonico
    saveUser=(action 'saveUser')
    resetForm=(action 'resetForm')
  }}
</div>