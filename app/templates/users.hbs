<div class="ui relaxed grid">
  <div class="eight wide column">
    <h2>Users</h2>
    <div class="ui three stackable cards user">
    {{#each model as |user|}}
      <div class="card" {{action 'editUser' user.id}}>
        <div class="image">
          <img src="assets/images/v.png">
        </div>
        <div class="content">
          <span class="header">{{user.name}}</span>
          <div class="meta">
            <span class="date">Last seen on
            {{moment-format user.lastloggedin 'MMM Do, \'YY HH:MM:SS'}}
            </span>
          </div>
          <div class="description">
            <div class="ui tiny horizontal list">
              <div class="item">
                  {{#if (eq user.accesstype 'dbadmin')}}
                    <i class="database icon ui teal circular label mini"></i>
                  {{/if}}
                  {{#if (eq user.accesstype 'globaladmin')}}
                    <i class="lightning icon ui red circular label mini"></i>
                  {{/if}}
                  {{#if (eq user.accesstype 'netadmin')}}
                    <i class="server icon ui blue circular label mini"></i>
                  {{/if}}
                <div class="content">{{user.accesstype}}</div>
              </div>
            </div>
            {{!-- is a {{user.accesstype}} --}}
          </div>
        </div>
        <div class="extra content">
          <p><i class="users icon"></i>{{user.customer}}</p>
        </div>
      </div>
    {{/each}}
    </div>
  </div>
  <div class="left floated left aligned four wide column">
    {{edit-user username=user}}
  </div>
</div>